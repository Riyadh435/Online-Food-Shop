            <children>
                <PasswordField fx:id="currentPassword" layoutX="39.0" layoutY="135.0" onKeyTyped="#TypePassword" prefHeight="40.0" prefWidth="270.0" promptText="Current Password" style="-fx-background-color: transparent; -fx-border-color: #FFFFFF; -fx-border-width: 0px 0px 3px 0px; -fx-text-fill: #FFFFFF;">
                    <font>
                        <Font name="Microsoft Sans Serif" size="15.0" />
                    </font>
                </PasswordField>
                <PasswordField fx:id="newPassword" layoutX="39.0" layoutY="234.0" onKeyTyped="#newTypePassword" prefHeight="40.0" prefWidth="270.0" promptText="New Password" style="-fx-background-color: transparent; -fx-border-color: #FFFFFF; -fx-border-width: 0px 0px 3px 0px; -fx-text-fill: #FFFFFF;">
                    <font>
                        <Font name="Microsoft Sans Serif" size="15.0" />
                    </font>
                </PasswordField>
                <Button layoutX="39.0" layoutY="318.0" mnemonicParsing="false" onAction="#UpdatePassword" prefHeight="26.0" prefWidth="83.0" styleClass="custom-button" stylesheets="@../Buttons.css" text="Update" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
                <Label layoutX="62.0" layoutY="40.0" prefHeight="36.0" prefWidth="211.0" text="Change Password" textFill="WHITE">

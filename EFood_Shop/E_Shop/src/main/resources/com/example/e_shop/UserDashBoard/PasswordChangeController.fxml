<AnchorPane focusTraversable="true" prefHeight="402.0" prefWidth="374.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.e_shop.UserDashBoard.PasswordChangeController">
    <children>
